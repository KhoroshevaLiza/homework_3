mixin breadcrumbs(arr)
    .breadcrumbs
        ul.breadcrumbs__list
            if arr
                each item, index in arr
                    if index === arr.length - 1
                        li.breadcrumbs__item
                             span.breadcrumbs__last= item.value
                    else
                        li.breadcrumbs__item
                            //- последний элемент текстом, сначала проверяем на послений элемент
                            a(href=item.url title=item.title)= item.value
                            span.breadcrumbs__separator /
                            //- separator - разделитель

